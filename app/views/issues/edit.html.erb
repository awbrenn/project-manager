<h2>Edit an issue:</h2>
<%= form_for @issue, :url => project_issue_path(@project, @issue) , method: :patch do |f| %>
  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </p>
  <p>
  	<%= f.label :status %><br />
  	<%= f.select(:status, [['NEW', 1], ['IN PROGRESS', 2], ['COMPLETED', 3], ['WONT FIX', 4]]) %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>

<%= link_to 'Back', projects_path %>